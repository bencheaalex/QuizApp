<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.quizapp.Quizz">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/main_background" />

    <Button
        android:id="@+id/home_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/home_button" />

    <Button
        android:id="@+id/reset_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="@string/reset_button" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/home_button"
        android:layout_margin="@dimen/dim8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/football_q1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/questionStyle"
                android:text="@string/football_q1" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/football_q1_a1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:text="@string/football_q1_a1"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/football_q1_a2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:text="@string/football_q1_a2"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/football_q1_a3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:text="@string/football_q1_a3"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/football_q1_a4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:text="@string/football_q1_a4" />
            </RadioGroup>

            <TextView
                android:id="@+id/football_q2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/questionStyle"
                android:text="@string/football_q2" />

            <CheckBox
                android:id="@+id/football_q2_a1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="@string/football_q2_a1"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/football_q2_a2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="@string/football_q2_a2"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/football_q2_a3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="@string/football_q2_a3"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/football_q2_a4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="@string/football_q2_a4"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/football_q3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/questionStyle"
                android:text="@string/football_q3" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/football_q3_a1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:text="@string/football_q3_a1"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/football_q3_a2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:text="@string/football_q3_a2"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/football_q3_a3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:text="@string/football_q3_a3"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/football_q3_a4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:text="@string/football_q3_a4"
                    android:textSize="16sp" />
            </RadioGroup>

            <TextView
                android:id="@+id/football_q4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/questionStyle"
                android:text="@string/football_q4" />

            <CheckBox
                android:id="@+id/football_q4_a1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="@string/football_q4_a1"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/football_q4_a2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="@string/football_q4_a2"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/football_q4_a3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="@string/football_q4_a3"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/football_q4_a4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="@string/football_q4_a4"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/football_q5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/questionStyle"
                android:text="@string/football_q5" />

            <EditText
                android:id="@+id/football_q5_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Insert the answer here!" />

            <TextView
                android:id="@+id/ski_q1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/questionStyle"
                android:text="@string/ski_q1" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/ski_q1_a1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:text="@string/ski_q1_a1"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/ski_q1_a2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:text="@string/ski_q1_a2"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/ski_q1_a3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:text="@string/ski_q1_a3"
                    android:textSize="16sp" />

            </RadioGroup>

            <TextView
                android:id="@+id/ski_q2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/questionStyle"
                android:text="@string/ski_q2" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/ski_q2_a1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:text="@string/ski_q2_a1"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/ski_q2_a2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:text="@string/ski_q2_a2"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/ski_q2_a3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:text="@string/ski_q2_a3"
                    android:textSize="16sp" />

            </RadioGroup>

            <TextView
                android:id="@+id/ski_q3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/questionStyle"
                android:text="@string/ski_q3" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/ski_q3_a1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:text="@string/ski_q3_a1"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/ski_q3_a2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:text="@string/ski_q3_a2"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/ski_q3_a3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:text="@string/ski_q3_a3"
                    android:textSize="16sp" />

            </RadioGroup>

            <TextView
                android:id="@+id/ski_q4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/questionStyle"
                android:text="@string/ski_q4" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/ski_q4_a1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:text="@string/ski_q4_a1"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/ski_q4_a2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:text="@string/ski_q4_a2"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/ski_q4_a3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:text="@string/ski_q4_a3"
                    android:textSize="16sp" />

            </RadioGroup>

            <TextView
                android:id="@+id/ski_q5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/questionStyle"
                android:text="@string/ski_q5" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp">

                <RadioButton
                    android:id="@+id/ski_q5_a1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"

                    android:text="@string/ski_q5_a1"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/ski_q5_a2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"

                    android:text="@string/ski_q5_a2"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/ski_q5_a3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"

                    android:text="@string/ski_q5_a3"
                    android:textSize="16sp" />

            </RadioGroup>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:onClick="submit"
                android:text="@string/submit_button" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
