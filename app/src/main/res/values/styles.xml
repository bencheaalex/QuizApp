<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FirstPageTextStyle" parent="android:Widget.TextView">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/textdim18</item>
        <item name="android:justificationMode">inter_word</item>
        <item name="android:layout_margin">@dimen/dim8</item>
    </style>
    <style name="questionStyle" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/textdim18</item>
        <item name="android:textStyle">bold</item>
        <item name="android:justificationMode">inter_word</item>
        <item name="android:layout_margin">@dimen/dim8</item>
        <item name="android:textColor">#fff</item>
    </style>

</resources>
